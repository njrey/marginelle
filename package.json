{
  "name": "marginelle",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "openapi": "turbo run openapi:gen",
    "db:generate": "pnpm -C packages/db generate",
    "db:migrate": "pnpm -C packages/db migrate",
    "db:seed": "pnpm -C packages/db seed",
    "db:studio": "pnpm -C packages/db studio"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.44.5"
    }
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6"
  },
  "dependencies": {
    "drizzle-orm": "0.44.5"
  }
}
